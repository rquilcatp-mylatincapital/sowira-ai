{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },
  "css": {
    "parser": {
      "tailwindDirectives": true
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/apps/portal-company/.next",
      "!**/apps/portal-talent/.next",
      "!**/apps/portal-backend/dist",
      "!**/packages/ui/dist",
      "!**/packages/ui/storybook-static"
    ]
  }
}
