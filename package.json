{
  "name": "sowira-ai",
  "private": true,
  "scripts": {
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "deploy": "turbo run deploy",
    "destroy": "turbo run destroy",
    "bootstrap": "turbo run bootstrap",
    "synth": "turbo run synth",
    "diff": "turbo run diff",
    "test": "turbo run test",
    "biome-check": "biome check .",
    "biome-check:fix": "biome check . --write --unsafe",
    "typecheck": "turbo run typecheck",
    "typecheck:ci": "turbo run typecheck --concurrency 2",
    "commit-check": "commitlint --edit",
    "commit": "git-cz",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.ts": "biome check",
    "*.tsx": "biome check",
    "*.js": "biome check",
    "*.jsx": "biome check",
    "*.json": "biome check",
    "*.css": "biome check"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@commitlint/cz-commitlint": "^20.1.0",
    "@commitlint/format": "^20.0.0",
    "@commitlint/types": "^20.0.0",
    "@types/bun": "^1.2.23",
    "commitizen": "^4.3.1",
    "husky": "^9.1.7",
    "inquirer": "12",
    "lint-staged": "^16.2.3",
    "turbo": "^2.5.8",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": "22"
  },
  "packageManager": "bun@1.3.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
